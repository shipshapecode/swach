<div class="w-full space-y-8">
  <div>
    <h2 class="mt-6 text-center text-2xl font-bold">
      Reset Password
    </h2>
    {{#if this.errorMessage}}
      <div class="alert alert-danger">
        {{this.errorMessage}}
      </div>
    {{/if}}
  </div>
  <div class="mt-8 space-y-6">
    <div class="rounded-md -space-y-px">
      <div>
        <label for="email-address" class="sr-only">
          Email address
        </label>
        <Input
          data-test-login-input-user
          id="email-address"
          name="email"
          type="email"
          autocomplete="email"
          required
          class="input rounded-t w-full"
          placeholder="Email address"
          @value={{this.username}}
        />
      </div>
      <div>
        <label for="confirmation-code" class="sr-only">
          Confirmation code
        </label>
        <Input
          data-test-login-input-code
          id="confirmation-code"
          name="confirmation-code"
          type="text"
          autocomplete="current-password"
          required
          class="input rounded-t w-full"
          placeholder="Confirmation code"
          @value={{this.code}}
        />
      </div>
      <div>
        <label for="password" class="sr-only">
          Password
        </label>
        <Input
          data-test-login-input-password
          id="password"
          name="password"
          type="password"
          autocomplete="current-password"
          required
          class="input rounded-t w-full"
          placeholder="Password"
          @value={{this.password}}
        />
      </div>
    </div>

    <div>
      <button
        class="btn btn-primary w-full"
        type="button"
        {{on "click" this.forgotPasswordSubmit}}
      >
        Reset Password
      </button>
    </div>
  </div>
</div>