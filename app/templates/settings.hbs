<button
  class="flex flex-grow items-center mb-1 pb-2 pt-2 w-full hover:text-menu-text-hover"
  type="button"
  {{on "click" (fn this.goBack)}}
>
  {{svg-jar "arrow-left" class="stroke-icon mr-2" height="15" width="15"}}
  <span class="font-bold text-sm uppercase">
    Back
  </span>
</button>

<div class="bottom-0 p-4 fixed w-full">
  <SettingsMenu
    @checkForUpdates={{this.application.checkForUpdates}}
    @enableDisableAutoStart={{this.application.enableDisableAutoStart}}
    @toggleShowDockIcon={{this.application.toggleShowDockIcon}}
  />
</div>