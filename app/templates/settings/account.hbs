{{#if session.isAuthenticated}}
<div class="mt-10 divide-y divide-gray-200">
  <div class="space-y-1">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      Profile
    </h3>
  </div>
  <div class="mt-6">
    <dl class="divide-y divide-gray-200">
      {{#each @model.attributes as |attr|}}
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-gray-500">
          {{attr.name}}
        </dt>
        <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <span class="flex-grow">{{attr.value}}</span>
          <span class="ml-4 flex-shrink-0">
            <button type="button"
              class="rounded-md font-medium text-purple-600 hover:text-purple-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
              Update
            </button>
          </span>
        </dd>
      </div>
      {{/each}}
    </dl>
  </div>
</div>
<button type="submit"
  class="btn btn-primary group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
  {{on "click" (fn this.logOut)}}>
  Log Out
</button>
{{else}}
<Login />
{{/if}}