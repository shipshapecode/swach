<button id="toggle-picker" type="button" {{on "click" this.toggleIsShown}}>
  {{svg-jar "edit-color" height="15" width="15"}}
</button>
<EmberPopover
  @arrowClass="custom-arrow"
  @event="none"
  @isShown={{this.isShown}}
  @side="top-end"
  @spacing={{10}}
  @targetId="toggle-picker"
  @tooltipClass="bg-main border-menu text-alt w-full"
>
  <div class="flex justify-between w-100">
    <button type="button" {{on "click" this.toggleIsShown}}>
      {{svg-jar "x" class="icon mb-2" height="20" width="20"}}
    </button>
    <button type="button" {{on "click" this.addColorAndClose}}>
      {{svg-jar "check" class="icon mb-2" height="20" width="20"}}
    </button>
  </div>

  <ColorRow @color={{this.selectedColor}} @showActions={{false}} />

  <div
    {{did-insert this.initColorPicker}}
    {{will-destroy this.destroyColorPickr}}
  ></div>
</EmberPopover>