<div class="font-normal text-main-text text-sm w-full" data-test-settings-menu>
  <div class="p-1 pb-4">
    <label class="block">
      <Input
        data-test-settings-startup
        @type="checkbox"
        @checked={{this.settings.openOnStartup}}
        {{on "change" @enableDisableAutoStart}}
      />

      Start Swach on system startup
    </label>

    <label class="block">
      <Input
        data-test-settings-show-dock-icon
        @type="checkbox"
        @checked={{this.settings.showDockIcon}}
        {{on "change" @toggleShowDockIcon}}
      />

      Show dock icon
    </label>

    <label class="block">
      <Input
        data-test-settings-sounds
        @type="checkbox"
        @checked={{this.settings.sounds}}
      />

      Play sounds
    </label>

    <label class="block">
      <Input @type="checkbox" @checked={{this.settings.notifications}} />

      Show notifications
    </label>
  </div>

  <div class="p-1 pb-4 pt-3" data-test-settings-select-theme>
    <h6 class="font-semibold mb-2 text-heading">
      App theme:
    </h6>

    <PowerSelect
      @options={{this.themes}}
      @placeholder="Choose theme"
      @selected={{this.settings.userTheme}}
      @onChange={{this.changeTheme}} as |theme|
    >
      {{capitalize theme}}
    </PowerSelect>
  </div>

  <div class="p-1 pb-4 pt-4">
    <h6 class="font-semibold mb-2 text-heading">
      Import/Export Data
    </h6>

    <div class="flex h-8 w-full">
      <LoadingButton
        class="h-full mr-2"
        @loading={{this.isExporting}}
        @onClick={{this.exportIndexedDB}}
      >
        Export data
      </LoadingButton>

      <LoadingButton
        class="h-full"
        @loading={{this.isImporting}}
        @onClick={{this.importIndexedDB}}
      >
        Import data
      </LoadingButton>
    </div>
  </div>

  <div class="p-1 pb-4 pt-4">
    <div class="flex h-8 w-full">
      <LoadingButton
        class="h-full w-40"
        @loading={{this.checkingForUpdates}}
        @onClick={{@checkForUpdates}}
      >
        Check for updates
      </LoadingButton>
    </div>
  </div>

  <div class="p-1">
    <h6 class="font-semibold text-heading">
      About:
    </h6>

    <p class="mt-2">
      Version: {{this.version}}
    </p>

    <p>
      Copyright Â© 2020 Ship Shape Consulting LLC. All rights reserved.
    </p>

    <p class="font-semibold mt-2">
      <a
        href
        class="text-alt hover:text-alt-hover"
        {{on "click" this.visitWebsite}}
      >
        https://swach.io/
      </a>
    </p>
  </div>
</div>