<div
  class="bg-menu cursor-default flex mb-3 p-3 rounded-lg shadow w-full"
  data-test-color={{@color.name}}
  {{on "click" (fn this.colorUtils.copyColorToClipboard @color)}}
>
  <div
    class="inline-block m-1 h-10 rounded w-10"
    style={{html-safe (concat "background-color: " @color.hex)}}
  ></div>
  <div class="flex flex-grow justify-between items-center">
    <div class="flex flex-col justify-center">
      <p class="font-bold pl-2 text-sm" data-test-color-name>
        {{@color.name}}
      </p>
      <p class="font-hairline pl-2 text-xs" data-test-color-hex>
        {{@color.hex}}
      </p>
    </div>

    {{#if this.showActions}}
      <div
        class="flex pb-2 pt-2"
        data-test-color-row-menu
        {{on "mouseenter" (set this.showMenu true)}}
        {{on "mouseleave" (set this.showMenu false)}}
      >
        {{#animated-if this.showMenu use=this.fade}}
          <div>
            <button
              data-test-go-to-kuler
              type="button"
              {{on "click" (stop-propagation (fn this.transitionToKuler))}}
            >
              {{svg-jar "sliders" class="icon mr-2" height="15" width="15"}}
            </button>
            {{#if @deleteColor}}
              <button
                data-test-delete-color
                disabled={{@palette.isLocked}}
                type="button"
                {{on "click" (stop-propagation (fn this.deleteColor @color))}}
                {{on "mouseleave" (set this.deleteConfirm false)}}
              >
                {{svg-jar
                  "trash"
                  class=(concat
                    "icon " (if this.deleteConfirm "delete-confirm")
                  )
                  height="15"
                  width="15"
                }}
              </button>
            {{/if}}
          </div>
        {{else}}
          <div>
            {{svg-jar "more-horizontal" class="icon" height="15" width="15"}}
          </div>
        {{/animated-if}}
      </div>
    {{/if}}
  </div>
</div>