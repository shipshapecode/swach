<div class="flex h-full items-center justify-center p-8 w-full">
  <div class="flex flex-col h-full w-full">
    <div class="flex justify-center w-full">
      {{svg-jar "swach" class="h-20 mb-8 w-20"}}
    </div>

    <h2 class="font-semibold mb-2 text-sub-text text-xl">
      Start Swach Automatically
    </h2>

    <div class="flex-auto mb-2 mt-2 text-main-text">
      <p>
        Would you like Swach to start every time you start your computer?
      </p>

      <div class="flex justify-center p-2 w-full">
        <ToggleSwitch
          class="p-6"
          @checked={{this.settings.openOnStartup}}
          {{on "change" this.application.enableDisableAutoStart}}
        />
      </div>
    </div>

    <div class="flex justify-between mt-8 w-full">
      <LinkTo
        class="btn btn-secondary p-2 text-center text-sm w-20"
        @route="welcome.index"
      >
        Previous
      </LinkTo>

      <LinkTo
        class="btn btn-primary p-2 text-center text-sm w-20"
        @route="welcome.dock-icon"
      >
        Next
      </LinkTo>
    </div>
  </div>
</div>