<AnimatedContainer class="colors-list">
  {{#animated-each
    this.sortedColors
    duration=400
    use=this.transition as |color|
  }}
    <ColorRow
      @color={{color}}
      @deleteColor={{this.deleteColor}}
      @palette={{@palette}}
      @toggleColorPickerIsShown={{@toggleColorPickerIsShown}}
    />
  {{/animated-each}}
</AnimatedContainer>