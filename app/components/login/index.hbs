<div class="bg-menu p-4 rounded w-full">
  <div>
    <h2 class="font-bold text-center text-2xl">
      Sign in
    </h2>
    <p class="mt-2 text-center text-menu-text text-sm">
      Or
      <LinkTo
        @route="settings.cloud.register"
        class="font-medium text-alt hover:text-alt-hover"
      >
        sign up
      </LinkTo>
    </p>
    {{#if this.errorMessage}}
      <div class="bg-red-400 my-2 p-4 rounded text-xs text-red-800">
        {{this.errorMessage}}
      </div>
    {{/if}}
  </div>
  <div class="mt-8 space-y-6">
    <div class="rounded-md -space-y-px">
      <div>
        <label for="email-address" class="sr-only">
          Email address
        </label>

        <Input
          data-test-login-input-user
          autocomplete="email"
          class="input rounded-t w-full"
          id="email-address"
          name="email"
          placeholder="Email address"
          required
          type="email"
          @value={{this.username}}
        />
      </div>
      <div>
        <label for="password" class="sr-only">
          Password
        </label>

        <Input
          data-test-login-input-password
          autocomplete="current-password"
          class="input rounded-b w-full"
          id="password"
          name="password"
          placeholder="Password"
          required
          type="password"
          @value={{this.password}}
        />
      </div>
    </div>

    <div class="flex items-center justify-between">
      <div class="text-sm">
        <LinkTo
          class="font-medium text-alt hover:text-alt-hover"
          @route="settings.cloud.forgot-password"
        >
          Forgot your password?
        </LinkTo>
      </div>
    </div>

    <div>
      <button
        data-test-login-submit
        class="btn btn-primary w-full"
        type="button"
        {{on "click" this.authenticate}}
      >
        Sign in
      </button>
    </div>
  </div>
</div>