{
  "name": "swach",
  "productName": "swach",
  "version": "1.1.13",
  "description": "A robust color management tool for the modern age.",
  "main": "src/index.js",
  "scripts": {
    "build": "electron-builder --publish always",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "postinstall": "electron-builder install-app-deps",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "Robert Wagner",
    "email": "rwwagner90@gmail.com",
    "url": "https://github.com/rwwagner90"
  },
  "license": "MIT",
  "config": {
    "forge": "config.forge.js"
  },
  "dependencies": {
    "@sentry/electron": "^4.11.0",
    "electron-dl": "^3.5.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "indexeddb-export-import": "^2.1.5",
    "menubar": "^9.3.0",
    "throttle-debounce": "^5.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/core": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-dmg": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.1",
    "@electron-forge/maker-zip": "^6.2.1",
    "@sentry/cli": "^2.20.5",
    "electron": "^21.1.0",
    "electron-builder": "^23.6.0",
    "electron-debug": "^3.2.0",
    "electron-download": "^4.1.1"
  },
  "engines": {
    "node": "16.* || >= 18",
    "pnpm": "^8.2.0"
  },
  "build": {
    "productName": "Swach",
    "linux": {
      "icon": "./resources/icon.png",
      "category": "Development",
      "description": "A robust color management tool for the modern age.",
      "synopsis": "A robust color management tool for the modern age.",
      "target": [
        "snap"
      ]
    },
    "snap": {
      "grade": "stable",
      "layout": {
        "/usr/lib/x86_64-linux-gnu/imlib2": {
          "bind": "$SNAP/usr/lib/x86_64-linux-gnu/imlib2"
        }
      },
      "publish": {
        "provider": "snapStore",
        "channels": "stable"
      },
      "stagePackages": [
        "default",
        "giblib1",
        "libimlib2",
        "libx11-6",
        "libxcursor1",
        "libxfixes3",
        "scrot"
      ]
    }
  }
}
