{{! prettier-ignore }}
<OneWayInputMask
  ...attributes
  @options={{
    hash
    isComplete=this.isComplete
    regex=this.hexRegex
    showMaskOnFocus=false
    showMaskOnHover=false
    onincomplete=this.onIncomplete
    oncomplete=this.onComplete
  }}
  @mask="\#*{6,8}"
  @update={{@update}}
  @value={{@value}}
  {{on "keypress" this.enterPress}}
/>